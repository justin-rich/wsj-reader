<div class="category">  
  <h3><%= @category.shortened_name %></h3>      
</div>

<div class="dateline">
  <div class="center">
    <span id="date">
      <%= Time.now.strftime("%A %B %d, %Y") %>      
    </span>
  </div>
</div>

<% if @articles.empty? %>
  <p>There are 0 results for your search</p>
<% end %>

<ul id="articles" class="articles">  
  <% @articles.each do |article| %>
    <% if article.image && article.image.thumbnail %>
      <li class="image">
        <a href="/news/<%= article.id %>"><img src="<%= article.image.thumbnail %>"></a>
    <% else %>
      <li>
    <% end %>
        <h2><a href="/news/<%= article.id %>"><%= article.title %></a></h2>
        <p><%= article.desc %></p>
        <div class="published_at">
          <%= article.pub_date %>
        </div>
      </li>    
    <% end %>
</ul>