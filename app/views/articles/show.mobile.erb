<% @title = @article.title %>

<%= partial "shared/header" %>

<div class="category">
  
  <h3><%= @category.name %></h3>
  
</div>

<div class="dateline">
  <div class="center">
    <span id="date">
      <%= Time.parse(@article.pub_date).strftime("%A %B %d, %Y") %>      
    </span>
  </div>
</div>


<div class="article">    
  <h1><%= @article.title %></h1>  
  
  <% unless @article.subtitle.nil? || @article.subtitle.empty? %>
    <h2><%= @article.subtitle %></h2>
  <% end %>
  
  <% if @article.image %>
    <div class="image">
      <img src="<%= @article.image.url %>" alt="<%= @article.image.caption %>"/><br />
      <div id="caption"><p><%= @article.image.caption %></p></div>
    </div>  
  <% end %>

  <div id="fulltext">
    <% unless @article.subtitle.nil? || @article.author.empty? %>
      <div class="byline"><%= @article.author %></div> 
      <div class="byline_border">&nbsp;</div>
    <% end %>
    
    <%= @article.fulltext %>
  </div>
</div>
